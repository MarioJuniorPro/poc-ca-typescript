{
  "name": "poc-ca-typescript",
  "version": "1.0.0",
  "description": "POC using Clean Architecture with Express and Typescript",
  "scripts": {
    "check-types": "tsc --project tsconfig.build.json --incremental false --noEmit",
    "lint": "eslint -c .eslintrc.js --ext .ts .",
    "lint:fix": "eslint -c .eslintrc.js --ext .ts . --fix",
    "prebuild": "rimraf dist",
    "dev": "ts-node-dev --respawn --transpile-only  --exit-child --ignore-watch node_modules src/main/server.ts",
    "dev:debug": "ts-node-dev --respawn --transpile-only --inspect=0.0.0.0:9229 --exit-child --ignore-watch node_modules src/main/server.ts",
    "start": "node dist/src/main/server.js",
    "start:debug": "node --inspect=0.0.0.0:9229 dist/src/main/server.js",
    "build": "tsc --project tsconfig.build.json"
  },
  "keywords": [],
  "author": "MarioJuniorPro",
  "private": true,
  "license": "UNLICENSED",
  "dependencies": {
    "compression": "1.7.4",
    "cors": "2.8.5",
    "dotenv": "10.0.0",
    "express": "4.17.1",
    "helmet": "4.6.0",
    "joi": "17.4.0",
    "pino": "6.11.3",
    "pino-pretty": "5.1.0",
    "rimraf": "3.0.2"
  },
  "devDependencies": {
    "@tsconfig/node14": "1.0.1",
    "@types/compression": "1.7.0",
    "@types/cors": "2.8.10",
    "@types/express": "4.17.12",
    "@types/node": "15.12.4",
    "@types/pino": "6.3.8",
    "@typescript-eslint/eslint-plugin": "4.28.0",
    "@typescript-eslint/parser": "4.28.0",
    "eslint": "7.29.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.4.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-sonarjs": "0.8.0-125",
    "eslint-plugin-unused-imports": "1.1.1",
    "husky": "6.0.0",
    "lint-staged": "11.0.0",
    "postinstall": "0.7.0",
    "prettier": "2.3.1",
    "ts-node-dev": "1.1.6",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.3.4"
  },
  "engines": {
    "node": "14.x"
  }
}